@import './imports'


.MainCompetition
  display flex

.CompetitionDescriptor, .TextEditor, .ReactCodeMirror
  width 50% !important

.icons
  cursor pointer
  margin-top 12px
  color white !important

.iconsRight
  margin-right 8px

.Description
  width 100%

.RerunTests
  height 100%

.error
  color red

.CompetitionItem
  text-decoration none
  text-align center

.Confetti
  display none

.WinShare
  display none

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font: 13px Helvetica, Arial;
  }

  form {
    background: #000;
    padding: 3px;
    position: fixed;
    bottom: 0;
    width: 100%;
  }

  form input {
    border: 0;
    padding: 10px;
    width: 90%;
    margin-right: .5%;
  }

  form button {
    width: 9%;
    background: rgb(130, 224, 255);
    border: none;
    padding: 10px;
  }

  #messages {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  #messages li {
    padding: 5px 10px;
  }

  #messages li:nth-child(odd) {
    background: #eee;
  }
